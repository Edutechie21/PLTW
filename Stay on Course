#pragma config(Sensor, in1,    righttracker,   sensorReflection)
#pragma config(Sensor, in2,    midtracker,     sensorReflection)
#pragma config(Sensor, in3,    lefttracker,    sensorReflection)
#pragma config(Sensor, dgtl1,  limitSwitch,    sensorTouch)
#pragma config(Sensor, dgtl11, headlight,      sensorLEDtoVCC)
#pragma config(Sensor, dgtl12, rearlight,      sensorLEDtoVCC)
#pragma config(Motor,  port1,           rightMotor,    tmotorVex393_HBridge, openLoop)
#pragma config(Motor,  port10,          leftMotor,     tmotorVex393_HBridge, openLoop, reversed)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

/*
Project Title:
Team Members:
Date:
Section:


Task Description:


Pseudocode:
startMotor
follow line
stop when all lit
turn around
follow line
return until all lit


*/

task main()
{                                     //Program begins, insert code within curly braces

untilBump(limitSwitch, 500);

	while(1==1)
	{





		if(SensorValue[righttracker] > 1250 && SensorValue[midtracker] > 1250 && SensorValue[lefttracker] > 1250)
		{
			stopMotor(rightMotor);
			stopMotor(leftMotor);
			untilBump(limitSwitch, 500);
				startMotor(rightMotor, -40);
				startMotor(leftMotor, 40);
				wait(1);
				untilDark(1250,midtracker);





		/*
			while(SensorValue[righttracker] < 500 || SensorValue[midtracker] > 500 || SensorValue[lefttracker] < 500)
			{
				startMotor(rightMotor, -30);
				startMotor(leftMotor, 30);
			}
      */
		}



		else if(SensorValue(righttracker) > 1250)
		{
			// counter-steer right:
			startMotor(leftMotor,   40);
			startMotor(rightMotor,  0);
		}
		// CENTER sensor sees dark:
		else if(SensorValue(midtracker) > 1250)
		{
			// go straight
			startMotor(leftMotor,   40);
			startMotor(rightMotor,  40);
		}
		// LEFT sensor sees dark:
		else if(SensorValue(lefttracker) >1250)
		{
			// counter-steer left:
			startMotor(leftMotor,  0);
			startMotor(rightMotor, 40);
		}












	}





}
