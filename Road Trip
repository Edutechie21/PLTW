task main()
{                                     //Task 7 Road Trip
turnLEDOn(headlight);
wait(1.5);
turnLEDOn(rearlight);
wait(1.5);
startMotor(rightMotor, -50);
startMotor(leftMotor, -40);
wait(3);
stopMotor(rightMotor);
stopMotor(leftMotor);
wait(1.5);
turnLEDOff(rearlight);
wait(2);

//turn left
startMotor(rightMotor, 40); //step 4
wait(1.5);
startMotor(rightMotor, 40);
startMotor(leftMotor, 40);
wait(3);
startMotor(leftMotor, 40); //right turn before Alex's house
stopMotor(rightMotor);
wait(1);
startMotor(rightMotor, 40);
startMotor(leftMotor, 40);
wait(2);//just got to alex's house
stopMotor(rightMotor);
stopMotor(leftMotor);
turnLEDOff(headlight);
wait(4); // step 6
turnLEDOn(headlight); //alex is now in the car
wait(1.5);
startMotor(rightMotor, 40);
startMotor(leftMotor, 40);
wait(3);
startMotor(rightMotor, 50);
stopMotor(leftMotor); //left turn into theatre
wait(1);

startMotor(leftMotor, 40);
wait(2);
stopMotor(leftMotor);
stopMotor(rightMotor);
wait(1.5);
turnLEDOff(headlight);
wait(5); //wait to watch movie
//step 10 reverse out of theatre
turnLEDOn(headlight);
wait(1.5);
turnLEDOn(rearlight);
wait(1.5);
startMotor(leftMotor, -45);
startMotor(rightMotor, -45);
wait(4);
stopMotor(leftMotor);
stopMotor(rightMotor);
wait(1.5);
turnLEDOff(rearlight);
wait(1.5);
//turn left
startMotor(rightMotor, 45);
wait(1);
startMotor(rightMotor, 40);
startMotor(leftMotor, 40);
wait(6); //going down broadway
startMotor(rightMotor, 45);
stopMotor(leftMotor);
wait(1.5);
startMotor(rightMotor, 40);
startMotor(leftMotor, 40);
wait(3);
stopMotor(leftMotor);
stopMotor(rightMotor);
wait(1);
startMotor(rightMotor, 45); //turn into driveway home
wait(1.5);
0startMotor(leftMotor, 40);
wait(0.5);
stopMotor(rightMotor);
stopMotor(leftMotor);
wait(1.5);
turnLEDOff(headlight);











}
